@model List<Application.ViewModels.GenreViewModel>

@{
    ViewData["Title"] = "Genres";
}

<div class="row">

    @if (Model == null)
    {
        <h3 class="text-white text-center">No se encontraron géneros</h3>
    }
    else
    {
        <h3 class="text-white text-center">Géneros</h3>
        <div class="col-8 mt-5 mx-auto">
            <table class="table table-dark table-striped mt-3">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td class="text-end">
                                <a class="text-white me-3"><i class="fas fa-edit"></i></a>
                                <a class="text-white me-3"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>