@model List<Application.ViewModels.ShowViewModel>

@{
    ViewData["Title"] = "Shows";
}

<div class="container mt-5">
    <h3 class="text-white text-center mb-4">Series</h3>

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="d-flex justify-content-end">
                <a asp-controller="Show" asp-action="Create" class="btn btn-sm btn-success">
                    Nuevo <i class="fas fa-plus text-white"></i>
                </a>
            </div>
            @if (Model == null || !Model.Any())
            {
                <h3 class="text-white text-center">No se encontraron series</h3>
            }
            else
            {
                <table class="table table-dark table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Imagen</th>
                            <th>Géneros</th>
                            <th>Productora</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <img src="@item.ImageUrl" alt="@item.Name" width="250"/>
                                </td>
                                <td>@item.PrimaryGenreName @item.SecondaryGenreName</td>
                                <td>@item.ProducerName</td>
                                <td class="text-end">
                                    <a class="text-white me-3" asp-controller="Show" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="text-white" asp-controller="Show" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>